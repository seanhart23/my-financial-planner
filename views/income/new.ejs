<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action='/income' method='POST'>
                <div class="form-group">
                    Source: <input class='form-control' type='text' name='source' placeholder='Source'>
                </div>
                <div class='form-group'>
                    Amount: <input class='form-control' type='number' name='amount' value='0.00' min='0.00' step='0.01'>
                </div>
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
</div>
