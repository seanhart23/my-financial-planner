<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1>Edit <%= income.source %></h1>
            <form action="/income/<%= income._id %>?_method=PUT" method="post">
                <div class="form-group">
                    Source: <input class='form-control' type='text' name='income[source]' value='<%= income.source %>'>
                </div>
                <div class='form-group'>
                    Amount: <input class='form-control' type='number' name='income[amount]' value='<%= income.amount %>' min='0.00' step='0.01'>
                </div>
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
