<div class="modal-header">
    <h5 class="modal-title">Edit an Item</h5>
</div>
<div class="modal-body">

            <form action="/favorites/<%= favorites._id %>?_method=PUT" method="post">
     
                <div class='form-group'>
                    website: <input class='form-control modal-input' type='string' name='website' value='<%= favorites.website %>'>
                </div>                
                
                <div class='form-group'>
                    label: <input class='form-control modal-input' type='string' name='label' value='<%= favorites.label %>'>
                </div>
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-block btn-primary modal-btn">Submit</button>
                <a href='/dashbaord' class='btn btn-lg bt-warning btn-block modal-btn'>Go Back</a>
                </div>
            </form>
        </div>
</div>
