<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/debt/<%= debt._id %>?_method=PUT" method="post">
                <div class="form-group">
                    Payee: <input class='form-control' type='text' name='itemLabel' value='<%= debt.itemLabel %>'>
                </div>
                <div class='form-group'>
                    Type:
                    <select class='form-control' name="type">
                        <option value='<%= debt.type %>'><%= debt.type %></option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="Student Loan">Student Loan</option>
                        <option value="Loan">Loan</option>
                        <option value="Bill">Bill</option>
                        <option value="Other">Other</option>
                    </select>
                </div>        
                <div class='form-group'>
                    Amount: <input class='form-control' type='number' name='amount' value='<%= debt.amount.toFixed(2) %>' min='0.000' step='0.001'>
                </div>
                <div class='form-group'>
                    Monthly Payment: <input class='form-control' type='number' name='monthlyPayment' value='<%= debt.monthlyPayment.toFixed(2) %>' min='0.00' step='0.01'>
                </div>
                <div class='form-group'>
                    Interest Rate: <input class='form-control' type='number' name='interestRate' value='<%= debt.interestRate %>'>    
                </div>    
                <div class='form-group'>
                    Due Date (Day of the month): <input class='form-control' type='text' name='dueDate' value='<%= debt.dueDate %>'>    
                </div> 
                <div class='form-group'>
                    Website: <input class='form-control' type='text' name='website' value='<%= debt.website %>'>    
                </div>        
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                <a href='/debt' class='btn btn-lg bt-warning btn-block'>Go Back</a>
                </div>
            </form>
        </div>
</div>
