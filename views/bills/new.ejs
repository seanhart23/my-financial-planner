<div class="modal-header">
    <h5 class="modal-title">Add an Expense</h5>
</div>
<div class="modal-body">
            <form action='/bills' method='POST'>
                <div class="form-group">
                    Payee: <input class='form-control modal-input' type='text' name='payee' placeholder='Payee'>
                </div>
                <div class='form-group'>
                    Type:
                    <select class='form-control modal-input' name="type">
                        <option value="" disabled selected>Select a type of bill</option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="Utility">Utility</option>
                        <option value="Student Loan">Student Loan</option>
                        <option value="Loan">Loan</option>
                        <option value="Household">Household</option>
                        <option value="Membership">Membership</option>
                        <option value="One Time">One Time</option>
                        <option value="Other">Other</option>
                    </select>
                </div>        
                <div class='form-group'>
                    Amount Due: <input class='form-control modal-input' type='number' name='amountDue' value='0.00' min='0.00' step='0.01'>
                </div>
                <div class='form-group'>
                    Due Date (Day of the month): <input class='form-control modal-input' type='text' name='dueDate' placeholder='10'>    
                </div>           
                <div class='form-group'>
                    Website: <input class='form-control modal-input' type='text' name='website' placeholder='https://www.bankofamerica.com'>    
                </div>        
                <div class='form-group'>
                    Auto Pay:
                    <select class='form-control modal-input' name="autoPay">
                        <option value="" disabled selected>Select one</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                        <option value="NA">N/A</option>
                    </select>
                </div>
                <div class='form-group'>
                    Share with Username: <input class='form-control modal-input' type='text' name='authUser' placeholder='Authorized User Username'>    
                </div>
                <div class='form-group'>
                    <button class="btn btn-lg btn-default btn-block btn-primary modal-btn">Submit</button>
                    <a href='/dashboard' class='btn btn-lg bt-warning btn-block modal-btn'>Go Back</a>
                </div>
            </form>
        </div>
</div>
