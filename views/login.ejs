<% include ./partials/header %>

<style>
    body {
    background-image: url("/images/Landing.jpg");
    background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
    overflow: auto;
    }
    
    .navbar-toggle {
        display: none;
    }
    
    @media screen and (max-width: 640px) {
        body {
        background-image: url("/images/Landing.jpg");
        background-size: cover;
	    background-position: center;
	    background-repeat: no-repeat;
        overflow: hidden;
        }
    }
</style>
<div class="container">
    <div class="row">
        <div class='col-lg-3 index-form' id='login'>
        <div id='login-input'>
            <form action='/login' method='POST'>
                <h3 id='login-header'>Login</h3>
                <div class="form-group">
                    <input class='form-control' type='text' name='username' placeholder='username'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='password' name='password' placeholder='password'>
                </div>        
                <div class='form-group'>
                    <button class='form-control btn-primary' id='login-button'>Login</button>
                </div>
            </form>
            <center><a href='/register' id='register'>Register</a></center>
            </div>
        </div>
        <div class='col-lg-9'>
            <div id='main-banner'>
            <h1>Welcome to My Financial Planner</h1>
            <h4>This web application is a tool developed to help you with your day to day finances.</h4>
        </div>
        </div>
    </div>
</div>

<script type="text/javascript" src='/js/budget.js'></script>

