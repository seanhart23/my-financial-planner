<div class="modal-header">
    <h5 class="modal-title">Add a Transaction</h5>
</div>
<div class="modal-body">
    <form action='/budgetExpense' method='POST' id='formLayout'>
        <div class="form-group">
            Title: <input class='form-control' type='text' name='expense' placeholder='Title'>
        </div>        
        <div class="form-group">
            Amount: <input class='form-control' type='number' name='amount' placeholder='$0.00'>
        </div>
        <div class='form-group'>
            Type:
            <select class='form-control' name="type">
                <option value="" disabled selected>Select a type</option>
                <option value="income">Income</option>
                <option value="expense">Expense</option>
            </select>
        </div>           
        <div class='form-group'>
            Category:
            <select class='form-control' name="category">
                <option value="" disabled selected>Select a category</option>
                <option value="income">Miscelaneous Income</option>
                <option value="expense">Miscelaneous Expense</option>
                <% budgetItem.forEach(function(budgetItem){ %>
                    <% if(currentUser.username === budgetItem.author.username){ %>
                <option value="<%= budgetItem.itemLabel %>"><%= budgetItem.itemLabel %></option>
                <% } %>
                <% }) %>
            </select>
        </div>                   
        <div class='form-group'>
            Date: <input class='form-control' type='date' name='date' placeholder='10/12/2019'>    
        </div>           
        <div class='form-group'>
            <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
            <a href='/budgetExpense' data-dismiss="modal" class='btn btn-lg bt-warning btn-block'>Go Back</a>
        </div>
    </form>
</div>